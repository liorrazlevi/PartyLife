<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A0F1B"
    android:fillViewport="true"
    android:id="@+id/usersetting"
    android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="32dp"
        android:layoutDirection="rtl">

        <!-- Header Section -->
        <TextView
            android:id="@+id/tvEAppTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PartyLife"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivEAppIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/logo"
            app:layout_constraintBottom_toBottomOf="@id/tvEAppTitle"
            app:layout_constraintEnd_toStartOf="@id/tvEAppTitle"
            app:layout_constraintTop_toTopOf="@id/tvEAppTitle"
            app:tint="#E91E63" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvETitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="עריכת פרטי משתמש"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvEAppTitle" />



        <!-- Full Name Input -->
        <TextView
            android:id="@+id/tvENameLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="שם מלא"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:gravity="start"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvETitle" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEFullName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="הזינו את שמכם המלאי"
            android:textColorHint="#6D6D6D"
            app:boxBackgroundColor="#2D1B2E"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeWidth="0dp"
            app:hintTextColor="#6D6D6D"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvENameLabel">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF"
                android:textColorHint="#6D6D6D"
                android:gravity="start" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Email Input -->
        <TextView
            android:id="@+id/tvEEmailLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="אימייל"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:gravity="start"
          android:enabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilEFullName" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="israel@email.com"
            android:textColorHint="#6D6D6D"
            app:boxBackgroundColor="#2D1B2E"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeWidth="0dp"
            app:hintTextColor="#6D6D6D"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvEEmailLabel">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textColor="#FFFFFF"
                android:textColorHint="#6D6D6D"
                android:gravity="start" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Phone Number Input -->
        <TextView
            android:id="@+id/tvEPhoneLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="מספר טלפון"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:gravity="start"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilEEmail" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="הזינו מספר טלפון"
            android:textColorHint="#6D6D6D"
            app:boxBackgroundColor="#2D1B2E"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeWidth="0dp"
            app:hintTextColor="#6D6D6D"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvEPhoneLabel">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:textColor="#FFFFFF"
                android:textColorHint="#6D6D6D"
                android:gravity="start" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password Input -->
        <TextView
            android:id="@+id/tvEPasswordLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="סיסמה"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:gravity="start"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilEPhone" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="••••••••"
            android:textColorHint="#6D6D6D"
            app:boxBackgroundColor="#2D1B2E"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeWidth="0dp"
            app:endIconMode="password_toggle"
            app:endIconTint="#9575CD"
            app:hintTextColor="#6D6D6D"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvEPasswordLabel">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="#FFFFFF"
                android:textColorHint="#6D6D6D"
                android:gravity="start" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Confirm Password Input -->
        <TextView
            android:id="@+id/tvEConfirmPasswordLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="אימות סיסמה"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:gravity="start"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilEPassword" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEConfirmPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="••••••••"
            android:textColorHint="#6D6D6D"
            app:boxBackgroundColor="#2D1B2E"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeWidth="0dp"
            app:endIconMode="password_toggle"
            app:endIconTint="#9575CD"
            app:hintTextColor="#6D6D6D"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvEConfirmPasswordLabel">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="#FFFFFF"
                android:textColorHint="#6D6D6D"
                android:gravity="start" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Register Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btEnRegister"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_marginTop="20dp"
            android:text="שמירה"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="#E91E63"
            app:cornerRadius="27dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilEConfirmPassword" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>